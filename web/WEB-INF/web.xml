<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>action.PageInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MaxPageServlet</servlet-name>
        <servlet-class>action.QueryNumOfPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaxPageServlet</servlet-name>
        <url-pattern>/maxPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userLoginServlet</servlet-name>
        <servlet-class>action.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLoginServlet</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>readBlogServlet</servlet-name>
        <servlet-class>action.readBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>readBlogServlet</servlet-name>
        <url-pattern>/readBlog</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>writeBlogServlet</servlet-name>
        <servlet-class>action.writeBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>writeBlogServlet</servlet-name>
        <url-pattern>/contentPost</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userRegistServlet</servlet-name>
        <servlet-class>action.UserRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userRegistServlet</servlet-name>
        <url-pattern>/userregist</url-pattern>
    </servlet-mapping>

</web-app>